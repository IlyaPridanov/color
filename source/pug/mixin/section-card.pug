mixin section-card(caption,list)
  -
    const arrCard = [
      {
        imgName: "card-1-1",
        width: "350",
        height: "420",
        name: "Девочки",
      },
      {
        imgName: "card-1-2",
        width: "309",
        height: "416",
        name: "Мальчики",
      },
      {
        imgName: "card-1-3",
        width: "313",
        height: "392",
        name: "Новорожденным",
      },
      {
        imgName: "card-1-4",
        width: "390",
        height: "500",
        name: "Для беременных",
      },
      {
        imgName: "card-1-5",
        width: "390",
        height: "421",
        name: "Уход за малышами",
      },
      {
        imgName: "card-1-6",
        width: "362",
        height: "412",
        name: "Игрушки",
      },
    ]

  section.section-card
    .container.section-card__container
      if caption
        h1.h2.section-card__caption=caption
      else
        h2.visually-hidden caption
      .section-card__row
        each item,index in arrCard
          if index===2
            +card("grad-"+index,list,true).section-card__card
              span=item.name
              +img(item.imgName,"png",item.width,item.height)
          else
            +card("grad-"+index,list,false).section-card__card
              span=item.name
              +img(item.imgName,"png",item.width,item.height)
